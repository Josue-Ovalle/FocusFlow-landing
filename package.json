{
  "name": "focusflow-landing",
  "version": "1.0.0",
  "description": "Landing page profesional para FocusFlow - AplicaciÃ³n de productividad con backend completo",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon server/index.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "echo 'Backend build complete'",
    "preview": "vite preview",
    "start": "node server/index.js",
    "test": "jest",
    "test:frontend": "jest frontend/",
    "test:backend": "jest server/",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky install",
    "deploy": "npm run build && npm run start"
  },
  "keywords": [
    "productivity",
    "saas",
    "landing-page",
    "express",
    "nodejs",
    "responsive",
    "accessible",
    "pwa"
  ],
  "author": {
    "name": "Josue_Ovalle",
    "email": "contacto@focusflow.example.com",
    "url": "https://focusflow.example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/usuario/focusflow-landing.git"
  },
  "bugs": {
    "url": "https://github.com/usuario/focusflow-landing/issues"
  },
  "homepage": "https://focusflow.example.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.48.0",
    "@jest/globals": "^29.6.4",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "concurrently": "^8.2.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "intersection-observer": "^0.12.2",
    "jest": "^29.6.4",
    "lint-staged": "^13.3.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "vite": "^4.4.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
